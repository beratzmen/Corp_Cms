@model CMS.Entities.Job

@{
    ViewBag.Title = "İş Başvuru Ekranı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeaderSection{
    <link rel="stylesheet" type="text/css" href="~/Content/FrontEnd/styles/course.css">
    <link rel="stylesheet" type="text/css" href="~/Content/FrontEnd/styles/course_responsive.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/scripts/JobApply.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
}

<!-- Home -->
<div class="home">
    <div class="breadcrumbs_container">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="breadcrumbs">
                        <ul>
                            <li></li>
                            <li>İLAN BAŞVURU</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>BAŞVURU EKRANI</h3>
            </div>
            <div class="card-body">
                <form action="/Job/Apply" method="post" enctype="multipart/form-data">
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="İSİM :" name="Name" required>

                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="SOY İSİM :" name="SurName" required>

                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="TELEFON :" maxlength="10" name="Phone" required>
                    </div>
                    <div class="input-group form-group">
                        <select class="form-control show-tick" name="JobID">
                            @*@foreach (var item in Model)
                                {*@
                            <option value="@Model.Id">@Model.Title</option>
                            @* } *@
                        </select>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label style="color:white;">
                                    CV YÜKLEYİN :
                                    <input type="file" value="CV" name="file" class="btn float_left" />
                                </label>
                            </div>
                            <div class="col-md-6">
                                <input type="submit" value="BAŞVUR" class="btn float-right login_btn" style="margin-top:25px;">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
